<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    tools:context=".SecondActivity">

    <EditText
        android:id="@+id/edit_text"
        android:paddingEnd="16dp"
        android:drawableEnd="@drawable/ic_baseline_search"
        android:paddingStart="16dp"
        android:drawableStart="@drawable/ic_baseline_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/grey2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/text"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:text="Policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1"
        android:drawableEnd="@drawable/ic_baseline_play"
        android:textColor="@color/black"
        android:text="Policy"
        app:cornerRadius="12dp"
        android:textAlignment="textStart"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:layout_width="330dp"
        android:layout_height="60dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:drawableEnd="@drawable/ic_baseline_play"
        android:textColor="@color/black"
        android:text="Product Category"
        android:textAlignment="textStart"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_width="330dp"
        android:layout_height="60dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        android:drawableEnd="@drawable/ic_baseline_play"
        android:textColor="@color/black"
        android:text="Origin Country"
        android:textAlignment="textStart"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_width="330dp"
        android:layout_height="60dp"/>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        android:drawableEnd="@drawable/ic_baseline_play"
        android:textColor="@color/black"
        android:text="Brand"
        android:textAlignment="textStart"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_width="330dp"
        android:layout_height="60dp"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/text2"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:text="Current Policies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/red_button"
        android:textSize="10sp"
        android:text="Export as CSV"
        app:cornerRadius="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        android:layout_width="180dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/textView"
        android:drawableEnd="@drawable/ic_outline_keyboard_arrow"
        android:textColor="@color/black"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/red_button"
        android:text="Country of origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:drawableEnd="@drawable/ic_outline_keyboard_arrow"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/textView"
        android:layout_marginStart="80dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/red_button"
        android:text="Product Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="30sp"
        android:textColor="@color/red"
        android:id="@+id/g_text"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="150dp"
        android:layout_height="50dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>